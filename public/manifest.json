{
  "manifest_version": 3,
  "name": "Greenhouse Autopilot",
  "description": "Your Greenhouse Autopilot",
  "version": "1.0.0",
  "icons": {
    "256": "logo.png",
    "512": "logo.png"
  },
  "action": {
    "default_icon": "logo.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}